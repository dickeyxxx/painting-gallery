= form_for(@painting, :html => {:multipart => true}) do |f|
  - if @painting.errors.any?
    #error_explanation
      %h2
        = pluralize(@painting.errors.count, "error")
        prohibited this painting from being saved:
      %ul
        - @painting.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.file_field :image
  .actions
    = f.submit
